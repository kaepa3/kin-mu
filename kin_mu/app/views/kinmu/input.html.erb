<div class="field">
  <h1>today: <%=@today%></h1>
</div>
<%= form_tag({:action => :input}, {:method => :get}) do %>
  <%= date_select :dsp_date, :date %>
  <%= submit_tag "change day"%>
<% end %>
<div class="field">
  <h1>date: <%= @record_date.to_s%></h1>
</div>

<%= form_for @roster_db ,:url => {:action => :update} do |f| %>
  <div class="field">
      <%= f.hidden_field :user_id, value: @user_id %>
      <%= f.hidden_field :record_date, value: @record_date %>
    <div class="field_ele">
      <%= f.label :working_start %>
      <%= f.time_field :working_start %>
    </div>
    <div class="field_ele">
      <%= f.label :EndWorking %>
      <%= f.time_field :end_working %>
    </div>
    <div class="field_ele">
      <%= f.label :description %>
      <%= f.text_area :work_description, :size => "20x10"%>
    </div>
   </div>
   <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
